@page
@model SinusSkateboards.Pages.ShippingModel
@{
}
<h3 class="text-center">Shipping & payment</h3>

<h5>Enter your information below: </h5>
<form method="post">
    <label>Name:</label><br />
    <input type="text" asp-for="@Model.Name" /><br />

    <label>E-mail:</label><br />
    <input type="text" asp-for="@Model.Email" /><br />

    <label>Phone:</label><br />
    <input type="number" asp-for="@Model.Number" /><br />

    <label>Adress:</label><br />
    <input type="text" asp-for="@Model.Adress" /><br />

    <label>City:</label><br />
    <input type="text" asp-for="@Model.City" /><br />

    <label>Postal code:</label><br />
    <input type="text" asp-for="@Model.PostalCode" /><br />

    <br /><h5>Choose your shipping option: </h5>
    <input type="radio" asp-for="@Model.ShippingOption" name="ShippingOption" id="opt1" value="PostNord" /><label for="opt1">PostNord (39 SEK)</label><br />
    <input type="radio" asp-for="@Model.ShippingOption" name="ShippingOption" id="opt2" value="DHL" /><label for="opt2">DHL (99 SEK)</label><br />

    <br /><h5>Choose your payment method: </h5>
    <input type="radio" asp-for="@Model.PaymentOption" name="PaymentOption" id="opt1" value="Debit Card" /><label for="opt1">Card Payment (0 SEK)</label><br />
    <input type="radio" asp-for="@Model.PaymentOption" name="PaymentOption" id="opt3" value="PayPal" /><label for="opt1">PayPal (0 SEK)</label><br />
    <input type="radio" asp-for="@Model.PaymentOption" name="PaymentOption" id="opt2" value="Klarna (29 SEK)" /><label for="opt1">Klarna (29 SEK)</label><br />

    <br /><input type="submit" value="Confirm Order" />
</form>