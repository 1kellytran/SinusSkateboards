@page
@model SinusSkateboards.Pages.T_shirtsModel
@{
}
<div class="row">
    @foreach (var product in Model.Tshirts)
    {
        <div class="col-lg-4">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src=~/images/products/@product.Image alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text"><b>Size</b>: @(((Models.WearableModel)product).Size)</p>
                    <p class="card-text">@product.Price SEK </p>
                    <a asp-page="ViewProduct" asp-route-ID="@product.ID" class="btn btn-primary">View Product</a>
                </div>
            </div>
            <br />
        </div>
    }
</div>