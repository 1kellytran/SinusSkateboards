@page
@model SinusSkateboards.Pages.ViewPageModel
@{
} 

<div row="col-lg-6">
    @foreach (var item in Model.Product)
    {
    <div class="d-flex flex-row">
        <img src=~/images/products/@item.Image />
        <div class="text-right">
            <h2>@item.Name</h2>
            <p>@item.Info</p>
            <h4>@item.Price SEK</h4><br /><br />
            <p>VAT <i>@(@item.Price * @Model.VAT) SEK</i> included  </p>
            @if (item.Stock > 0)
            {
                <p class="card-text"><i>@item.Stock</i> in Stock</p>
            }
            else
            {
                <p><i><b>Out of Stock</b></i></p>
            }
            @if (item.MaxStock > 0)
            {
                <a asp-page="ShoppingCart" asp-route-id="@item.ID" class="btn btn-primary">Add to cart</a>
            }
        </div>
    </div>        
    }
</div>